extends ../layout/index

block contenido
    div(class="py-10")
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
        span(class="font-normal") Raices    
    h2(class="text-center text-2xl font-extrabold")= pagina

    if errores
        div(class='max-w-md mx-auto my-10')
            each error in errores
                p(class='bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=error.msg

    div(class="mt-8 mx-auto max-w-md")
        div(class='bg-white py-8 px-4 shadow')
            form(action="/auth/olvide-password" class='space-y-5' method='POST' novalidate)
                input(type="hidden" name='_csrf' value= csrfToken)
                div 
                    label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for='email') Email de registro
                    input(type="email" id="email" class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400' placeholder="Tu Email" name='email')
                div(class='flex items-center justify-between')
                    a(href="/auth/registro" class='text-gray-500 text-xs') No tienes cuenta? Crea una
                    a(href="/auth/login" class='text-gray-500 text-xs') Ya tienes cuenta? Inicia sesi√≥n
                input(type="submit" value='Enviar Instrucciones' class='w-full bg-indigo-600 text-white hover:bg-indigo-700 font-bold py-3 cursor-pointer rounded-lg')